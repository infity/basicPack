<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <!--<link rel="icon" href="../../favicon.ico">-->

    <title>{% block title %}{{ RDR.TRANSLATE.title|capitalize }} - {{ RDR.LAYOUT.siteName|capitalize }}{% endblock %}</title>
    <!-- Bootstrap core CSS -->
    <link href="{{ RDR.MINIFIER.css(RDR.DIR_VENDOR~'/infity/basicpack/public/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="{{ RDR.MINIFIER.css(RDR.DIR_VENDOR~'/infity/basicpack/public/css/ie10-viewport-bug-workaround.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ RDR.MINIFIER.css(RDR.DIR_VENDOR~'/infity/basicpack/public/css/sticky-footer-navbar.css') }}" rel="stylesheet">
    <!-- core CSS -->
    <link href="{{ RDR.MINIFIER.css(RDR.DIR_VENDOR~'/infity/basicpack/public/css/input.css') }}" rel="stylesheet">
    <link href="{{ RDR.MINIFIER.css(RDR.DIR_VENDOR~'/infity/basicpack/public/css/templatePHPSTRUCT.css') }}" rel="stylesheet">
    <!-- toastr -->
    <link href="{{ RDR.MINIFIER.css(RDR.DIR_VENDOR~'/infity/basicpack/public/css/toastr.min.css') }}" rel="stylesheet">
    
    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="{{ RDR.MINIFIER.js(RDR.DIR_VENDOR~'/infity/basicpack/public/js/ie8-responsive-file-warning.js') }}"></script><![endif]-->
    <script src="{{ RDR.MINIFIER.js(RDR.DIR_VENDOR~'/infity/basicpack/public/js/ie-emulation-modes-warning.js') }}"></script>
    
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{ RDR.ROUTE.home }}">{{ RDR.LAYOUT.siteName|capitalize }}</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class=""><a href="{{ RDR.ROUTE.home }}">{{ RDR.LAYOUT.TRANSLATE.value('menuHome') }}</a></li>
            <li><a href="{{ RDR.ROUTE.about }}">{{ RDR.LAYOUT.TRANSLATE.value('menuAbout') }}</a></li>
            <li><a href="{{ RDR.ROUTE.contact }}">{{ RDR.LAYOUT.TRANSLATE.value('menuContact') }}</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li role="separator" class="divider"></li>
                <li class="dropdown-header">Nav header</li>
                <li><a href="#">Separated link</a></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <!-- Begin page content -->
    <div class="container">
        {% block error_message %}
        {% if  RDR.MSG is defined %}
        <!-- MESSAGE -->            
        <div class="{{ RDR.MSG.BootClass }}" role="alert">
                {{ RDR.MSG.message|raw }}
        </div>
        <!-- MESSAGE -->
        {% endif %}
        {% endblock %}          
      <div class="page-header">
          <h1>{% block page_title %}{{ RDR.TRANSLATE.title|capitalize }}{% endblock %}</h1>
      </div>
      <p class="lead">{% block lead_content %}{% endblock %}</p>   
      {% block content %}{% endblock %}
    </div>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">
            {% block footer %}
            Infity basicpack 
            | <a href="{{ RDR.ROUTE.contact }}" >{{ RDR.LAYOUT.TRANSLATE.value('menuContact') }}</a>
            | <a href="{{ RDR.ROUTE.about }}" >{{ RDR.LAYOUT.TRANSLATE.value('menuAbout') }}</a>
            | <a href="{{ RDR.ROUTE.mentions }}">{{ RDR.LAYOUT.TRANSLATE.value('menuMentions') }}</a>
            {% if  constant('\\Config::HTAWRITE') %}
                | Language: <a href="?/lang-en/" >English</a> - <a href="?/lang-fr-fr/" >Français</a>
            {% else %}
                | Language: <a href="?lang-en/" >English</a> - <a href="?lang-fr-fr/" >Français</a>
            {% endif %}
            
            | <a href="{{ RDR.ROUTE.sitemap }}" >{{ RDR.LAYOUT.TRANSLATE.value('menuSitemap') }}</a>
            {% endblock %}
        </p>
      </div>
    </footer>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript">
        {% block javascript %}{% endblock %}
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ RDR.MINIFIER.js(RDR.DIR_VENDOR~'/infity/basicpack/public/js/jquery.min.js') }}"><\/script>')</script>
    <script src="{{ RDR.MINIFIER.js(RDR.DIR_VENDOR~'/infity/basicpack/public/js/toastr.min.js') }}"></script>
    <script src="{{ RDR.MINIFIER.js(RDR.DIR_VENDOR~'/infity/basicpack/public/js/bootstrap.min.js') }}"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="{{ RDR.MINIFIER.js(RDR.DIR_VENDOR~'/infity/basicpack/public/js/ie10-viewport-bug-workaround.js') }}"></script>
  </body>
</html>